# Variables para correr la app dentro de Docker Compose
# Copiá este archivo a `.docker.env` y ajustá lo necesario.

# Ambiente
NODE_ENV=local
NODE_CONFIG_ENV=local
SERVICE_NAME=challenge-greelow
PORT=3000

# Base de datos (desde Docker, el host es el nombre del servicio container)
POSTGRES_HOST=challenge-greelow-postgresql
POSTGRES_PORT=5432
POSTGRES_USER=greelow
POSTGRES_PASSWORD=password
POSTGRES_DB=greelow
POSTGRES_SCHEMA=public

# TypeORM
ORM_SYNCHRONIZE=true

# Auth
JWT_SECRET=dev-secret-change-me

# Logging
LOG_LEVEL=debug

# Kafka (desde Docker, usar el broker interno)
KAFKA_BROKERS=kafka:29092
KAFKA_CONSUMER_GROUP_ID=telegram-conversations
KAFKA_CONSUMER_ENABLED=true

# Telegram
# Requerido: token del bot
TELEGRAM_BOT_TOKEN=CHANGEME

# Polling
TELEGRAM_POLLING_ENABLED=true
TELEGRAM_POLL_INTERVAL_MS=2000
TELEGRAM_GETUPDATES_LIMIT=100
TELEGRAM_GETUPDATES_TIMEOUT_SECONDS=0
